<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:weightSum="1">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        />
    <ImageView
        android:id="@+id/myanimation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@anim/splash"
        android:layout_gravity="center_horizontal" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:textColor="#ffffff"
        android:text="From the makers of Quiz Bang"
        android:id="@+id/splashTx"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="25sp"
        android:textStyle="italic"
        android:typeface="serif"
        android:visibility="visible" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:text="P-Dazzle Manager"
        android:id="@+id/splashTx2"
        android:textAlignment="center"
        android:gravity="right"
        android:layout_marginRight="40dp"
        android:textStyle="italic"
        android:textSize="20sp" />
    <TextView
        android:layout_width="265dp"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:text=" &amp;"
        android:id="@+id/splashTx4"
        android:textAlignment="center"
        android:gravity="right"
        android:layout_marginRight="100dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:text="The Goat Whisperer"
        android:id="@+id/splashTx3"
        android:textAlignment="center"
        android:gravity="right"
        android:layout_marginRight="40dp"
        android:textStyle="italic"
        android:textSize="20sp" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:id="@+id/imageView"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/simon" />


</LinearLayout>